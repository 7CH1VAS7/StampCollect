@model IEnumerable<Курсовая.Domain.Entity.Collector>

<div class="container mt-4">
    <h1 class="mb-4 text-center">Коллекционеры</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var collector in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">@collector.FullName</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <span class="badge bg-info text-dark">
                                <i class="fas fa-envelope"></i> @collector.Email
                            </span>
                        </div>

                        @if (collector.Collections.Any())
                        {
                            <h6 class="mt-3 border-bottom pb-2">Коллекции:</h6>
                            <ul class="list-group list-group-flush">
                                @foreach (var collection in collector.Collections)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        @collection.Name
                                        <span class="badge bg-secondary rounded-pill">
                                            @collection.Stamps.Count марок
                                        </span>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="alert alert-warning mt-3">Нет коллекций</div>
                        }
                    </div>
                    <div class="card-footer bg-light">
                        <small class="text-muted">
                            <i class="fas fa-map-marker-alt"></i> @collector.Country
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Подключение иконок Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .card {
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-5px);
    }
    .card-header {
        font-weight: 600;
    }
    .list-group-item {
        transition: background-color 0.2s;
    }
    .list-group-item:hover {
        background-color: #f8f9fa;
    }
</style>